# =============================================================================
# AI Shuffle Configuration
# =============================================================================
# This file works for both Docker and Local deployments.
# Copy to .env and modify as needed.
# =============================================================================

# =============================================================================
# Deployment Mode
# =============================================================================
# Set to "true" to run in local mode (on your PC, not in Docker)
# When true, uses platform-specific paths for data storage
# Leave unset or "false" for Docker deployment
LOCAL_MODE=false

# =============================================================================
# Server Configuration
# =============================================================================
# For Docker: 0.0.0.0 (accessible from host)
# For Local: 127.0.0.1 (localhost only) or 0.0.0.0 (LAN accessible)
HOST=0.0.0.0
PORT=8000

# Service Configuration
SERVICE_NAME=ai-shuffle
LOG_LEVEL=info

# Command Configuration
COMMAND_TIMEOUT=300

# =============================================================================
# Path Configuration
# =============================================================================
# These paths are auto-detected based on deployment mode if not set:
#
# Docker Mode (LOCAL_MODE=false):
#   DATA_DIR=/data
#   WORKSPACE_DIR=/workspace
#
# Local Mode (LOCAL_MODE=true):
#   Windows:  DATA_DIR=%APPDATA%\ai-shuffle
#             WORKSPACE_DIR=%USERPROFILE%\Documents\ai-shuffle-workspace
#   macOS:    DATA_DIR=~/Library/Application Support/ai-shuffle
#             WORKSPACE_DIR=~/ai-shuffle-workspace
#   Linux:    DATA_DIR=~/.local/share/ai-shuffle
#             WORKSPACE_DIR=~/ai-shuffle-workspace
#
# Override with absolute paths if needed:
# DATA_DIR=/custom/path/to/data
# WORKSPACE_DIR=/custom/path/to/workspace

# =============================================================================
# Docker-Only Configuration
# =============================================================================
# User/Group ID Configuration (ignored in local mode)
# For Unraid, use PUID=99 and PGID=100
# For Docker Desktop or standard Linux, use PUID=1000 and PGID=1000
PUID=1000
PGID=1000

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Origins (comma-separated list of allowed origins)
# Use "*" only for development - this disables credential support
# For production, specify your exact domain(s)
# Examples:
#   CORS_ORIGINS=https://yourdomain.com
#   CORS_ORIGINS=https://app.example.com,https://admin.example.com
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Cookie Secure Flag
# Set to true for HTTPS deployments (recommended for production)
# Set to false only for local HTTP development
COOKIE_SECURE=true

# Maximum request body size in MB (default: 50MB)
# Increase if you need to upload larger files
MAX_REQUEST_BODY_MB=50

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MINUTES=15
LOCKOUT_DURATION_MINUTES=30

# Session expiration
SESSION_EXPIRE_DAYS=30
API_KEY_SESSION_EXPIRE_HOURS=24

# Trusted proxy headers for getting real client IP (comma-separated)
# Common values: X-Forwarded-For, X-Real-IP, CF-Connecting-IP (Cloudflare)
TRUSTED_PROXY_HEADERS=X-Forwarded-For,X-Real-IP

# =============================================================================
# Authentication Notes
# =============================================================================
# Claude Code uses OAuth authentication - no API key required!
#
# Docker:  docker exec -it ai-shuffle claude login
# Local:   claude login (run in terminal)
#
# After logging in, your credentials are stored in ~/.claude/.credentials.json
# =============================================================================
