<?xml version="1.0"?>
<Container version="2">
  <Name>AI-Shuffle</Name>
  <Repository>ghcr.io/quickkill0/ai-shuffle:latest</Repository>
  <Registry>https://ghcr.io/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/Quickkill0/ai-shuffle/issues</Support>
  <Project>https://github.com/Quickkill0/ai-shuffle</Project>
  <Overview>
    AI Shuffle - A self-hosted web interface and API server for Claude Code.

    Features:
    - Claude.ai-like chat interface
    - Multi-user support with API keys
    - Real-time streaming responses
    - Agent profiles and tool management
    - Session history and checkpoints

    After installation, you must authenticate:
    1. Open container console in Unraid
    2. Run: claude login
    3. Follow OAuth flow in browser
    4. Authentication persists in appdata
  </Overview>
  <Category>Tools:Utilities Network:Web</Category>
  <WebUI>http://[IP]:[PORT:8000]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/Quickkill0/ai-shuffle/main/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/Quickkill0/ai-shuffle/main/.github/claude-icon.png</Icon>
  <ExtraParams>--tty --interactive</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI Port" Target="8000" Default="8000" Mode="tcp" Description="Web interface and API port" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
  <Config Name="Claude Auth" Target="/home/appuser/.claude" Default="/mnt/user/appdata/claude-sdk/claude-auth" Mode="rw" Description="Persistent storage for Claude authentication tokens" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/claude-sdk/claude-auth</Config>
  <Config Name="GitHub Auth" Target="/home/appuser/.config/gh" Default="/mnt/user/appdata/claude-sdk/gh-auth" Mode="rw" Description="Persistent storage for GitHub CLI authentication" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/claude-sdk/gh-auth</Config>
  <Config Name="Data" Target="/data" Default="/mnt/user/appdata/claude-sdk/data" Mode="rw" Description="Database and session data" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/claude-sdk/data</Config>
  <Config Name="Workspace" Target="/workspace" Default="/mnt/user/appdata/claude-sdk/workspace" Mode="rw" Description="Workspace directory for projects and file operations" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/claude-sdk/workspace</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID (99 for Unraid compatibility)" Type="Variable" Display="advanced" Required="true" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID (100 for Unraid compatibility)" Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="info" Mode="" Description="Logging level: debug, info, warning, error" Type="Variable" Display="advanced" Required="false" Mask="false">info</Config>
  <Config Name="Command Timeout" Target="COMMAND_TIMEOUT" Default="300" Mode="" Description="Timeout for Claude commands in seconds" Type="Variable" Display="advanced" Required="false" Mask="false">300</Config>
  <Config Name="Service Name" Target="SERVICE_NAME" Default="ai-shuffle" Mode="" Description="Service identifier" Type="Variable" Display="advanced" Required="false" Mask="false">ai-shuffle</Config>
  <Config Name="CORS Origins" Target="CORS_ORIGINS" Default="*" Mode="" Description="Allowed CORS origins (comma-separated). Use * for local access, or specify exact URLs like http://192.168.1.100:8000 for production" Type="Variable" Display="advanced" Required="false" Mask="false">*</Config>
  <Config Name="Cookie Secure" Target="COOKIE_SECURE" Default="false" Mode="" Description="Set to true if using HTTPS, false for HTTP" Type="Variable" Display="advanced" Required="false" Mask="false">false</Config>
  <Config Name="Max Upload Size (MB)" Target="MAX_REQUEST_BODY_MB" Default="50" Mode="" Description="Maximum file upload size in megabytes" Type="Variable" Display="advanced" Required="false" Mask="false">50</Config>
</Container>
